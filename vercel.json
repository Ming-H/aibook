{
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "build": {
    "env": {
      "SHARP_IGNORE_GLOBAL_LIBVIPS": "1"
    }
  },
  "crons": [
    {
      "path": "/api/cron/check-updates",
      "schedule": "0 22 * * *"
    },
    {
      "path": "/api/cron/check-updates",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/check-updates",
      "schedule": "0 10 * * *"
    }
  ]
}
